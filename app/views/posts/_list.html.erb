

<% @posts.each do |post| %>
  <i>Post by <%= post.userinfo.firstname + post.userinfo.lastname %></i> on <%= post.created_at %> <br>
  <br><%= post.content %>

<td>
<br><br><a class='likelink' data-post-id=<%= post.id %> href="#">Like this post</a>


  <hr>
<% end %>

<script>
$(document).ready( function()  {
  $(".likelink").click( function(event) {
       console.debug(this)

      $.ajax("/post/like",  {
                method: "POST",
                data: { id: $(this).data('post-id') },
                success: function() {
                   $(this).text("Unlike")
                  } 
                }
              )
      event.preventDefault()
    } )
  }
)



</script>




